<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/produktImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kafelek" />

    <TextView
        android:id="@+id/przepisNazwaTextView"
        android:maxLines="1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/produktImageView"
        app:layout_constraintStart_toStartOf="@+id/produktImageView"
        app:layout_constraintTop_toTopOf="@+id/produktImageView" />

    <TextView
        android:id="@+id/produktIloscTextView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="28dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/produktImageView"
        app:layout_constraintEnd_toEndOf="@+id/produktImageView"
        app:layout_constraintStart_toStartOf="@+id/produktImageView"
        app:layout_constraintTop_toBottomOf="@+id/przepisNazwaTextView"
        app:layout_constraintVertical_bias="0.4" />

</android.support.constraint.ConstraintLayout>
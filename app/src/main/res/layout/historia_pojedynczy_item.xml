<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aha"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/historia_nazwa_przepisu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Nazwa przepisu"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/historia_data"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/historia_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="data ugotowania"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/historia_nazwa_przepisu"
        app:layout_constraintEnd_toStartOf="@+id/historia_ilosc_porcji" />

    <TextView
        android:id="@+id/historia_ilosc_porcji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="ilosc porcji"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/historia_nazwa_przepisu"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="4dp"
        android:background="#818181"
        app:layout_constraintTop_toBottomOf="@+id/historia_nazwa_przepisu"
        tools:layout_editor_absoluteX="-37dp" />
</android.support.constraint.ConstraintLayout>
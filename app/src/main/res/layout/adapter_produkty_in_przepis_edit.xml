<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="25dp">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete" />

    <CheckBox
        android:id="@+id/przepisy_edycja_nazwa_produktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Nazwa"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider6"
        android:layout_width="1dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:background="#444343"
        app:layout_constraintStart_toEndOf="@+id/przepisy_edycja_nazwa_produktu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/przepisy_ilosc_postrzebna_produktu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Ilość:"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="@+id/divider6"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/zmienIlosc"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="1"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/przepisy_ilosc_postrzebna_produktu2"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider8"
        android:layout_width="1dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:background="#444343"
        app:layout_constraintStart_toEndOf="@+id/zmienIlosc"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxOpcjonalnyEdycja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Czy opcjonalne?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider8"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>